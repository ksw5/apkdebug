<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/gd_gtwear_wearable_activation_base"/>
    <TextView android:textSize="16sp" android:textColor="@color/bbd_dark_grey" android:id="@+id/gd_gtwear_validation_body1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" android:layout_below="@+id/gd_gtwear_activation_base" android:layout_marginStart="48dp" android:layout_marginEnd="16dp"/>
    <TextView android:textSize="16sp" android:textColor="@color/bbd_dark_grey" android:id="@+id/gd_gtwear_validation_body2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" android:layout_below="@+id/gd_gtwear_validation_body1" android:layout_marginStart="48dp" android:layout_marginEnd="16dp"/>
    <TextView android:textSize="32sp" android:textStyle="bold" android:textColor="@color/bbd_dark_grey" android:id="@+id/gd_gtwear_verification_code_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" android:layout_below="@+id/gd_gtwear_validation_body2" android:layout_marginStart="48dp" android:layout_marginEnd="16dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:layout_above="@+id/gd_gtwear_activation_button_bar" android:layout_marginEnd="16dp">
        <LinearLayout android:gravity="end" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
            <Button android:textColor="@color/bbd_black" android:id="@+id/gd_gtwear_button_wrong" android:background="@drawable/bbd_gtwear_grey_button_background_selector" android:focusable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="20dp" android:layout_toStartOf="@+id/gd_gtwear_button_correct"/>
            <Button android:textColor="@color/bbd_black" android:id="@+id/gd_gtwear_button_correct" android:background="@drawable/bbd_gtwear_green_button_background_selector" android:focusable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_alignParentEnd="true">
                <requestFocus/>
            </Button>
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/gd_gtwear_activation_button_bar"/>
</RelativeLayout>
