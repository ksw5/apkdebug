<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:background="@color/bbd_background_color" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:id="@+id/gd_common_header_layout" android:background="@color/bbd_background_header_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:layout_alignParentEnd="true">
            <include layout="@layout/bbd_common_header"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/gd_activation_title_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/gd_common_header_layout">
            <com.good.gd.widget.GDTextView android:textSize="@dimen/gd_act_progress_title_text_size" android:textStyle="bold" android:textColor="@color/bbd_blue_light" android:gravity="center" android:id="@+id/gd_activation_title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/gd_act_progress_text_top_margin" android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
            <include layout="@layout/bbd_activation_progress_illustration_view"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/bbde_provision_progress_view_UI" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/gd_view_margin_regular" android:layout_above="@+id/bbd_bottom_line_layout" android:layout_below="@+id/gd_activation_title_layout">
            <LinearLayout android:orientation="vertical" android:id="@+id/gd_act_progress_step_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/gd_act_progress_step_layout_top_margin" android:layout_marginStart="@dimen/gd_act_progress_port_step_start_end_margin" android:layout_marginEnd="@dimen/gd_act_progress_port_step_start_end_margin"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/bbd_bottom_line_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentStart="true" android:layout_alignParentEnd="true">
            <include layout="@layout/bbd_bottom_line"/>
        </LinearLayout>
    </RelativeLayout>
</merge>
